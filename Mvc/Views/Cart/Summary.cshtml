@model Mvc.Models.Cart

<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-shopping-cart"></i>
    <span class="label label-warning">@Model.Lines.Sum(x => x.Qty)</span>
</a>
<ul class="dropdown-menu">
    <li class="header">Cart Items : @Model.Lines.Sum(x => x.Qty) item(s)</li>
    <li>
        <!-- Inner Menu: contains the notifications -->
        <ul class="menu">
            <li>
                <!-- start notification -->
                <a href="#">
                    <i class="fa fa-users text-aqua"></i> Total : @Model.CalcTotalValue().ToString("c")
                </a>
            </li>
            <!-- end notification -->
        </ul>
    </li>
    <li class="footer"><a href="~/Cart/Index">View all</a></li>
</ul>
